{
    "name": "Pingpong ROS2 Dev",
    "dockerFile": "../Dockerfile",
    "context": "..",
    "workspaceFolder": "/workspaces/pingpong_tracker",
    "remoteUser": "developer",
    "privileged": true,
    "mounts": [
        {
            "source": "/dev",
            "target": "/dev",
            "type": "bind"
        },
        {
            "source": "/tmp/.X11-unix",
            "target": "/tmp/.X11-unix",
            "type": "bind"
        },
        {
            "source": "/dev/dri",
            "target": "/dev/dri",
            "type": "bind"
        },
        {
            "source": "${localEnv:XAUTHORITY}",
            "target": "/home/developer/.Xauthority",
            "type": "bind"
        }
    ],
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}",
        "WAYLAND_DISPLAY": "${localEnv:WAYLAND_DISPLAY}",
        "XAUTHORITY": "/home/developer/.Xauthority"
    },
    "runArgs": [
        "--network=host"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                // C++ language support
                "llvm-vs-code-extensions.vscode-clangd",
                // Python language support
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                // CMake language support
                "twxs.cmake",
                // Code spell checking
                "streetsidesoftware.code-spell-checker",
                // Git enhancements
                "mhutchie.git-graph"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "fish": {
                        "path": "bash"
                    }
                }
            }
        }
    },
    "postCreateCommand": [
        "sh",
        "-c",
        "chmod +x ./.scripts/* && ./.scripts/init_devcontainer.sh"
    ]
}