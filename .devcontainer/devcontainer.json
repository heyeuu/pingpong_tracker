{
    "name": "Pingpong ROS2 Dev",
    "dockerFile": "../Dockerfile",
    "context": "..",
    "runArgs": [
        "--privileged",
        "--network=host",
        "-v",
        "/dev:/dev"
    ],
    "workspaceFolder": "/workspaces/pingpong_tracker",
    "remoteUser": "developer",
    "customizations": {
        "vscode": {
            "extensions": [
                // C++ language support
                "llvm-vs-code-extensions.vscode-clangd",
                // Python language support
                "ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                // CMake language support
                "twxs.cmake",
                // Code spell checking
                "streetsidesoftware.code-spell-checker",
                // Git enhancements
                "mhutchie.git-graph"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "fish",
                "terminal.integrated.profiles.linux": {
                    "fish": {
                        "path": "fish"
                    }
                }
            }
        }
    },
    "postCreateCommand": [
        "sh",
        "-c",
        "chmod +x ./.scripts/* && ./.scripts/init_devcontainer.sh"
    ]
}